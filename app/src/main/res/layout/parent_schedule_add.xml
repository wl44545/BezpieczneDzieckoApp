<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_schedule_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parent.children.schedules.parentScheduleAdd"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DODAJ HARMONOGRAM"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:elegantTextHeight="true"
        android:textColor="@color/design_default_color_primary"
        android:gravity="center_horizontal"/>


    <Button
        android:id="@+id/btn_map"
        android:layout_width="180dp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="MAPA"
        android:textSize="20sp" />





    <Button
        android:id="@+id/btn_start_date"
        android:layout_width="180dp"
        android:layout_height="60sp"
        android:text="DATA POCZĄTKOWA"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_start_time"
        android:layout_width="180dp"
        android:layout_height="60sp"
        android:text="GODZINA POCZĄTKOWA"
        android:textSize="15sp"
        android:translationX="200dp"
        android:translationY="-60dp" />

    <Button
        android:id="@+id/btn_stop_date"
        android:layout_width="180dp"
        android:layout_height="60sp"
        android:text="DATA KOŃCOWA"
        android:textSize="15sp"
        android:translationY="-60dp" />

    <Button
        android:id="@+id/btn_stop_time"
        android:layout_width="180dp"
        android:layout_height="60sp"
        android:text="GODZINA KOŃCOWA"
        android:textSize="15sp"
        android:translationX="200dp"
        android:translationY="-120dp" />



    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Opis"
        android:inputType="text"
        android:textSize="15sp"
        android:translationY="-100dp"/>


    <LinearLayout
        android:translationY="-90dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/schedule_start"/>
        <TextView
            android:id="@+id/txt_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/txt_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:translationY="-90dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/schedule_stop" />
        <TextView
            android:id="@+id/txt_stop_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/txt_stop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:translationY="-90dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/longitude" />
        <TextView
            android:id="@+id/txt_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>
    <LinearLayout
        android:translationY="-90dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/latitude" />
        <TextView
            android:id="@+id/txt_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:translationY="-90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/schedule_radius" />
        <TextView
            android:id="@+id/txt_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:text="ZAPISZ"
        android:textSize="20sp" />

</LinearLayout>