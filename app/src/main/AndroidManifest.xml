<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bezpiecznedziecko">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BezpieczneDziecko"
        android:usesCleartextTraffic="true">
        <activity android:name=".child.main.childMain"></activity>
        <activity android:name=".parent.maps.parentMap" />
        <activity android:name=".child.maps.childMap" />
        <activity android:name=".parent.main.parentMain" />
        <activity android:name=".authorization.parentLogin" />
        <activity android:name=".authorization.childLogin" />
        <activity android:name=".authorization.childRegister" />
        <activity android:name=".authorization.parentRegister" />
        <activity android:name=".child.schedules.childSchedulesList" />
        <activity android:name=".parent.children.parentChildrenList" />
        <activity android:name=".parent.schedules.parentSchedulesList" />
        <activity android:name=".welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".child.main.LocationUpdatesService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="location" />
    </application>

</manifest>